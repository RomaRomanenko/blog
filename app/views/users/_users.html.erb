<%= hidden_field_tag :direction, params[:direction] %>
<%= hidden_field_tag :sort, params[:sort] %>
<table class='table' id='all_users' >
 	<thead>
     	<tr> 
          <th><%= sortable 'position' %></th>    			
       		<th><%= sortable 'first_name' %></th>
          <th><%= sortable 'last_name' %></th>
          <th><%= sortable 'email' %></th>
       	  <th>Edit</th>
       	  <th>Destroy</th>
     	</tr>
    </thead>

    <tbody id="sort_users" data-update-url="<%= sort_users_url %>">
      <%- @users.each do |user| %>
        <div id='list_users'><%= render partial: 'user', locals: { user: user } %></div>
      <% end %>
    </tbody>
</table>